<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <title>BookSnap</title>
</head>

<body>
    <div class="container text-center">
        <h1 class="m-4 p-2 display-2">BookSnap</h1>
        <div class="row align-items-center">
            <div class="col-sm-8 justify-content-start">
                <h5 class="m-2 p-2 text-start">Hello, <%= user.name %>
                </h5>
            </div>
            <div class="col-sm-4 row justify-content-around">
                <div class="col-6"><a href="/member/logout" class="text-secondary link-offset-3">Logout</a></div>
                <div class="col-6"><a href="/member/delete_account" class="text-danger link-offset-3">Delete
                        account</a></div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12 p-0 mt-2">
                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">My Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/member/library">Library</a>
                    </li>
                </ul>
            </div>
        </div>
        <% if (error.length> 0) { %>
            <div class="row justify-content-center mt-2">
                <div class="col">
                    <h4 class="text-danger">
                        <%= error %>
                    </h4>
                </div>
            </div>
            <% } %>
                <% if (status.length> 0) { %>
                    <div class="row justify-content-center mt-2">
                        <div class="col">
                            <h4 class="text-info">
                                <%= status %>
                            </h4>
                        </div>
                    </div>
                    <% } %>
                        <div class="row g-2 mt-4">
                            <% if (user.books.length> 0) { %>
                                <% user.books.forEach((book)=> { %>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="card" style="max-height: 30rem;">
                                            <img src="<%= book.img %>" class="card-img-top"
                                                alt="Hollywood Sign on The Hill"
                                                style="max-height: 18rem; object-fit: contain;" />
                                            <div class="card-body p-2 pt-2 text-start">
                                                <h5 class="card-title mb-1"
                                                    style="height: 2rem; overflow-y: scroll; scrollbar-width: 0; scrollbar-base-color: transparent;">
                                                    <%= book.title %>
                                                </h5>
                                                <h6 class="card-subtitle mb-1 text-body-secondary"
                                                    style="height: 1.6rem; overflow-y: scroll; scrollbar-width: 0; scrollbar-base-color: transparent;">
                                                    <%= book.author %>
                                                </h6>
                                                <p class="card-text mb-1"
                                                    style="height: 3rem; overflow-y: scroll; scrollbar-width: 0; scroll-behavior: smooth; scrollbar-base-color: transparent;">
                                                    <%= book.desc %>
                                                </p>
                                                <div class="w-100 text-end">
                                                    <a href="/member/app/return/<%= book._id %>"
                                                        class="btn btn-outline-secondary p-1 fs-6 text-end">Return</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <div class="col">
                                                <h4>Nothing borrowed yet :(</h4>
                                            </div>
                                            <% } %>
                        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>